<?xml version="1.0" encoding="utf-8"?>
<com.pebble.pebblecolors.CheckableLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root_list_item"
    android:background="@drawable/state_checked">

    <TextView
        android:id="@+id/color_command_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingBottom="8dp"
        android:textColor="@color/primary_text"
        android:text="R: 177 G: 177 B: 177"/>

    <TextView
        android:id="@+id/color_command_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:textColor="@color/primary_text"/>

</com.pebble.pebblecolors.CheckableLinearLayout>